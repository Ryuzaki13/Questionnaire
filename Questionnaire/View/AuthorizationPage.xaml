<Page x:Class="Questionnaire.View.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Questionnaire.View"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="250">
            <Label Content="Логин"/>
            <TextBox/>
            <Label Content="Пароль"/>
            <TextBox/>
            <Border Height="24"/>
            <Button Content="Войти" Click="onLogin"/>
        </StackPanel>
    </Grid>
</Page>
