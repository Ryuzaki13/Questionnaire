<Page x:Class="Questionnaire.View.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Questionnaire.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="250">
            <Label Content="Логин"/>
            <TextBox Text="{Binding Login}"/>
            <Label Content="Пароль"/>
            <PasswordBox Name="tbPassword"/>
            <Label Content="Фамилия"/>
            <TextBox Text="{Binding LastName}"/>
            <Label Content="Имя"/>
            <TextBox Text="{Binding FirstName}"/>
            <Label Content="Отчество"/>
            <TextBox Text="{Binding Patronymic}"/>
            <Border Height="24"/>
            <Button Content="Зарегистрировать" Click="onRegister"/>
        </StackPanel>
    </Grid>
</Page>
